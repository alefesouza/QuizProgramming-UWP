<Application
    x:Class="Quiz.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quiz"
    RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="SystemAccentColor">#ff5afe04</Color>

                    <SolidColorBrush x:Key="TitleBarBackgroundThemeBrush" Color="#ff000000" />
                    <SolidColorBrush x:Key="TitleBarButtonHoverThemeBrush" Color="#ff5afe04" />
                    <SolidColorBrush x:Key="TitleBarButtonPressedThemeBrush" Color="#ff00cc00" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
